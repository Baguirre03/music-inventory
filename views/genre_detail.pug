extends layout

block content

  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Songs

    dl
      each song in genre_songs
        dt
          a(href=song.url) #{song.name}

      else
        p This genre has no songs
    hr
    p
    a(href=genre.url+'/delete') Delete Genre
