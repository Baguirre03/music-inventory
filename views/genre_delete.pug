extends layout

block content
  h1 #{title}: #{genre.name}

  if genre_songs.length

    p #[strong Delete the following songs before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Songs

      dl
      each song in genre_songs
        dt
          a(href=song.url) #{song.name}

  else
    p Do you really want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genre_id', required='true', value=genre._id )
        input#password.form-control(type='text', name='password', required='true', value='' placeholder='Enter Secret Password to Delete')

      button.btn.btn-primary(type='submit') Delete

    if errors
      ul
        for error in errors
          li!= error.msg
